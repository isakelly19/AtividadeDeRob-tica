#include <iostream>
using namespace std;

float saldo = 1000;

void deposito(float valor) {
    if (valor > 0) {
        saldo += valor;
        cout << "Dep칩sito de " << valor << " realizado com sucesso." << endl;
    } else {
        cout << "Valor inv치lido para dep칩sito." << endl;
    }
}

void consulta() {
    cout << "Saldo atual: " << saldo << endl;
}

int main() {
    consulta();

    deposito(500);
    consulta();

    deposito(-100);  // Valor inv치lido
    consulta();

    return 0;
}
