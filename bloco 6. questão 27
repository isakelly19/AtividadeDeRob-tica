    if (valor > 0) {
        saldo += valor;
        cout << "Dep칩sito de " << valor << " realizado com sucesso." << endl;
    } else {
        cout << "Valor inv치lido para dep칩sito." << endl;
    }
}

int main() {
    float valor;
    cout << "Saldo inicial: " << saldo << endl;

    cout << "Digite o valor do dep칩sito: ";
