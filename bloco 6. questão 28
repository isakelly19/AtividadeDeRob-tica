#include <iostream>
#include <string>
using namespace std;

struct Pessoa {
    string nome;
    int idade;
    float altura;
};

void mostrarPessoa(Pessoa* p) {
    cout << p->nome << " " << p->idade << " " << p->altura << endl;
}

int main() {
    Pessoa pessoa1 = {"JoÃ£o", 30, 1.75f};

    mostrarPessoa(&pessoa1);

    return 0;
}
